    //                 center: [55.76, 37.64],
    //                 zoom: 10
    //             });
    //         });
    //     }
    // };
</script>

@code{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initMap");
        }
    }

    public void Dispose()
    {
        JS.InvokeVoidAsync("destroyMap");
    }
